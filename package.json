{
  "name": "cypress-orangehrm-automation",
  "version": "1.0.0",
  "description": "E2E Automation Testing for Orange HRM using Cypress with BDD Cucumber Framework",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:open": "cypress open",
    "test:headless": "cypress run --headless",
    "test:firefox": "cypress run --browser firefox",
    "test:chrome": "cypress run --browser chrome",
    "test:bdd": "cypress run --spec 'cypress/e2e/features/**/*.feature'",
    "test:report": "cypress run && node scripts/generateReport.js",
    "pretest": "node scripts/cleanReports.js"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing",
    "bdd",
    "cucumber"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "cypress": "^13.6.2",
    "cypress-mochawesome-reporter": "^3.3.5",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "eslint": "^8.55.0",
    "faker": "^6.6.6"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  }
}
